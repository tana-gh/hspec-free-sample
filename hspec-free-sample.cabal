    main-is:          Main.hs

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:
    build-depends:
        base ^>=4.14.1.0,
        hspec-free-sample,
        free,
        mtl

    hs-source-dirs:   app
    default-language: Haskell2010

test-suite hspec-free-sample-test
    default-language: Haskell2010
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Spec.hs
    exposed-modules:
        HspecFreeSample.Spec.AppSpec,
        HspecFreeSample.Spec.Mock
    build-depends:
        base ^>=4.14.1.0,
        hspec-free-sample,
        free,
        hspec,
        mtl
