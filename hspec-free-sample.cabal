extra-source-files: CHANGELOG.md

library
    exposed-modules:
        HspecFreeSample.App,
        HspecFreeSample.AppCmd,
        HspecFreeSample.AppRunner,
        HspecFreeSample.AskCmd,
        HspecFreeSample.PrintCmd

    -- LANGUAGE extensions used by modules in this package.
